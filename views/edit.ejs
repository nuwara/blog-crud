<%-include("partials/header")%>
<div class="raw d-flex justify-content-center">
  <div class="col-md-6">
    <h1 class="m-5">Edit a post</h1>

    <form
      action="/update/<%=blog.id%>"
      method="post"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          class="form-control"
          name="title"
          value="<%=blog.title%>"
        />
      </div>
      <div class="mb-3">
        <label for="author" class="form-label">Author</label>
        <input
          type="text"
          class="form-control"
          name="author"
          value="<%=blog.author%>"
        />
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Content</label>
        <textarea name="content" class="form-control" id="" cols="30" rows="10">
        <%=blog.content%></textarea
        >
      </div>
      <div class="mb-3">
        <label for="author" class="form-label">Image upload</label>
        <input
          type="file"
          class="form-control"
          name="image"
          value="<%=blog.image%>"
        />
      </div>
      <a href="/" class="btn btn-secondary">Cancel</a>
      <button type="submit" class="btn btn-primary">Update</button>
    </form>
  </div>
</div>
<%-include("partials/footer")%>
