<%-include("partials/header")%>

    <div class="raw m-5">
        <% if(blogs.length > 0){%>
            <%blogs.forEach(blog=>{%>
                <div class="col-md-6">
                    <h1 class="m-4">
                        
                            <%=blog.title%>
                        </h1>
                        <p>
                            <%=blog.content.slice(0, 100)%>.....
                            <a href="/show/<%=blog.id%>">Read more</a>
                    </p>
                    <p>
                        <img src="<%=blog.image%>" width="35" height="35"> By: <i><%=blog.author%></i>
                    </p>

                    <p class="text-muted">
                        Published on:
                        <%=blog.createdAt.toDateString()%>
                    </p>
                </div>
                <hr>
                <% }) %>
    </div>
    <% }else{%>
        <p class="text-center">No Blog to Display</p>
        <% } %>
    </div>
    <%-include("partials/footer")%>