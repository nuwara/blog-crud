<%-include("partials/header")%>
<div class="raw">
  <div class="col-md-6">
    <h1 class="text-center mt-5"><%=blog.title%></h1>
    <p>
      <img
        src="/<%= blog.image %>"
        class="rounded-circle"
        style="width: 100px; height: 100px"
        alt="uploaded images"
      />
      By <%=blog.author%>
    </p>
    <p class="text-muted">
      Published on: <i><%=blog.createdAt.toDateString()%></i>
    </p>

    <p><%=blog.content%></p>

    <a href="/edit/<%=blog.id%>" class="btn btn-info">Edit</a>
    <a href="/delete/<%=blog.id%>" class="btn btn-danger">Delete</a>
    <a href="/" class="btn btn-secondary">All Blogs</a>
  </div>
  <div class="col-3"></div>
</div>
<%-include("partials/footer")%>
